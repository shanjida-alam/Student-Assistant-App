<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1976D2"
                android:endColor="#1565C0"
                android:angle="135"/>
        </shape>
    </item>

    <!-- Wave Pattern -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#33FFFFFF"
                android:centerColor="#11FFFFFF"
                android:endColor="#00FFFFFF" />

            <size android:height="100dp"/>
        </shape>
    </item>

    <!-- Second Wave Pattern -->
    <item android:top="50dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#1AFFFFFF"
                android:centerColor="#0DFFFFFF"
                android:endColor="#00FFFFFF" />

            <size android:height="100dp"/>
        </shape>
    </item>
</layer-list>