<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/light_blue_600"
                android:endColor="@color/light_blue_900"
                android:angle="135"/>
        </shape>
    </item>

    <!-- Wave Pattern -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="@color/light_blue_600"
                android:centerColor="@color/light_blue_900"
                android:endColor="#00FFFFFF" />

            <size android:height="100dp"/>
        </shape>
    </item>

    <!-- Second Wave Pattern -->
    <item android:top="50dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#1AFFFFFF"
                android:centerColor="#0DFFFFFF"
                android:endColor="#00FFFFFF" />

            <size android:height="100dp"/>
        </shape>
    </item>
</layer-list>